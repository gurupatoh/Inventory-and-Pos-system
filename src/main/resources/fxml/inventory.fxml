<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.app.inventory.controllers.InventoryController"
      spacing="15">
    <padding>
        <Insets top="15" right="15" bottom="15" left="15"/>
    </padding>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Inventory Management" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Label text="Filter by Type:"/>
        <ComboBox fx:id="filterTypeCombo" prefWidth="120"/>
    </HBox>

    <TableView fx:id="inventoryTable" prefHeight="400" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colName" text="Name" prefWidth="160"/>
            <TableColumn fx:id="colQuantity" text="Quantity" prefWidth="80"/>
            <TableColumn fx:id="colPrice" text="Price" prefWidth="80"/>
            <TableColumn fx:id="colType" text="Type" prefWidth="100"/>
            <TableColumn fx:id="colTotal" text="Total" prefWidth="90"/>
            <TableColumn fx:id="colDate" text="Date Added" prefWidth="120"/>
        </columns>
    </TableView>

    <!-- Summary -->
    <Label fx:id="totalValueLabel" text="Total Inventory Value: $0.00" alignment="CENTER_LEFT"/>

    <!-- Buttons -->
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Add Item" onAction="#handleAddItem"/>
        <Button text="Edit Item" onAction="#handleEditItem"/>
        <Button text="Delete Item" onAction="#handleDeleteItem"/>
        <Button text="Back" onAction="#handleBack"/>
    </HBox>

</VBox>
