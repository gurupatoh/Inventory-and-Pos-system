<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/17.0.2"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.app.inventory.controllers.InventoryController"
      spacing="15">

    <!-- Proper padding using Insets -->
    <padding>
        <Insets top="15" right="15" bottom="15" left="15"/>
    </padding>

    <!-- Header -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Inventory Management" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Label text="Filter by Type:"/>
        <ComboBox fx:id="filterTypeCombo" prefWidth="120"/>
    </HBox>

    <!-- Table -->
    <TableView fx:id="inventoryTable" prefHeight="400" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colName" text="Name" prefWidth="200"/>
            <TableColumn fx:id="colQuantity" text="Quantity" prefWidth="100"/>
            <TableColumn fx:id="colPrice" text="Price" prefWidth="100"/>
            <TableColumn fx:id="colType" text="Type" prefWidth="120"/>
        </columns>
    </TableView>

    <!-- Footer Buttons -->
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Add Item" onAction="#handleAddItem"/>
        <Button text="Edit Item" onAction="#handleEditItem"/>
        <Button text="Delete Item" onAction="#handleDeleteItem"/>
        <Button text="Back" onAction="#handleBack"/>
    </HBox>

</VBox>
