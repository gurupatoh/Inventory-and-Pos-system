<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.app.inventory.controllers.UserManagementController">

    <!-- Header -->
    <HBox style="-fx-background-color: #2563eb; -fx-padding: 16 24; -fx-border-width: 0 0 1 0; -fx-border-color: #1e40af;">
        <Label text="User Management" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;" />
        <Region HBox.hgrow="ALWAYS"/>
        <Label text="Manage system users and permissions" style="-fx-font-size: 12px; -fx-text-fill: rgba(255,255,255,0.8);" />
    </HBox>

    <VBox spacing="16" VBox.vgrow="ALWAYS" style="-fx-background-color: #f8fafc;">
        <padding>
            <Insets top="24" bottom="24" left="24" right="24"/>
        </padding>

        <!-- Statistics Cards -->
        <HBox spacing="16">
            <!-- Total Users Card -->
            <VBox style="-fx-background-color: #ffffff; -fx-border-color: #e2e8f0; -fx-border-width: 1; -fx-border-radius: 8; -fx-background-radius: 8;" HBox.hgrow="ALWAYS">
                <padding>
                    <Insets top="16" bottom="16" left="16" right="16"/>
                </padding>
                <Label text="Total Users" style="-fx-text-fill: #64748b; -fx-font-size: 12px; -fx-font-weight: bold;"/>
                <Label text="24" style="-fx-text-fill: #2563eb; -fx-font-size: 28px; -fx-font-weight: bold;"/>
            </VBox>

            <!-- Active Users Card -->
            <VBox style="-fx-background-color: #ffffff; -fx-border-color: #e2e8f0; -fx-border-width: 1; -fx-border-radius: 8; -fx-background-radius: 8;" HBox.hgrow="ALWAYS">
                <padding>
                    <Insets top="16" bottom="16" left="16" right="16"/>
                </padding>
                <Label text="Active Users" style="-fx-text-fill: #64748b; -fx-font-size: 12px; -fx-font-weight: bold;"/>
                <Label text="18" style="-fx-text-fill: #10b981; -fx-font-size: 28px; -fx-font-weight: bold;"/>
            </VBox>

            <!-- Inactive Users Card -->
            <VBox style="-fx-background-color: #ffffff; -fx-border-color: #e2e8f0; -fx-border-width: 1; -fx-border-radius: 8; -fx-background-radius: 8;" HBox.hgrow="ALWAYS">
                <padding>
                    <Insets top="16" bottom="16" left="16" right="16"/>
                </padding>
                <Label text="Inactive Users" style="-fx-text-fill: #64748b; -fx-font-size: 12px; -fx-font-weight: bold;"/>
                <Label text="6" style="-fx-text-fill: #6b7280; -fx-font-size: 28px; -fx-font-weight: bold;"/>
            </VBox>
        </HBox>

        <!-- Filter Section -->
        <VBox style="-fx-background-color: #ffffff; -fx-border-color: #e2e8f0; -fx-border-width: 1; -fx-border-radius: 8; -fx-background-radius: 8;" spacing="12">
            <padding>
                <Insets top="16" bottom="16" left="16" right="16"/>
            </padding>

            <Label text="Search and Filter" style="-fx-text-fill: #1e293b; -fx-font-size: 14px; -fx-font-weight: bold;"/>

            <HBox spacing="12" alignment="CENTER_LEFT">
                <Label text="Search by Username:" style="-fx-text-fill: #475569; -fx-font-size: 12px;"/>
                <TextField fx:id="filterUsername" promptText="Enter username..." style="-fx-border-radius: 6; -fx-background-radius: 6; -fx-padding: 8 12; -fx-border-color: #e2e8f0; -fx-border-width: 1;" HBox.hgrow="ALWAYS"/>
                <Button text="Search" style="-fx-background-color: #2563eb; -fx-text-fill: white; -fx-padding: 8 16; -fx-background-radius: 6; -fx-font-size: 12px;"/>
                <Button text="Clear" style="-fx-background-color: transparent; -fx-text-fill: #2563eb; -fx-border-color: #2563eb; -fx-border-width: 1; -fx-border-radius: 6; -fx-padding: 8 16; -fx-font-size: 12px;"/>
            </HBox>
        </VBox>

        <!-- User Table Card -->
        <VBox style="-fx-background-color: #ffffff; -fx-border-color: #e2e8f0; -fx-border-width: 1; -fx-border-radius: 8; -fx-background-radius: 8;" VBox.vgrow="ALWAYS" spacing="12">
            <padding>
                <Insets top="16" bottom="16" left="16" right="16"/>
            </padding>

            <Label text="System Users" style="-fx-text-fill: #1e293b; -fx-font-size: 14px; -fx-font-weight: bold;"/>
            <Separator style="-fx-padding: 0; -fx-border-color: #e2e8f0;"/>

            <!-- User Table -->
            <TableView fx:id="userTable" VBox.vgrow="ALWAYS" style="-fx-font-size: 12px;">
                <columns>
                    <TableColumn fx:id="colUsername" text="Username" prefWidth="120" />
                    <TableColumn fx:id="colRole" text="Role" prefWidth="100" />
                    <TableColumn fx:id="colInventoryType" text="Inventory Type" prefWidth="130" />
                    <TableColumn fx:id="colLastLogin" text="Last Login" prefWidth="140" />
                    <TableColumn fx:id="colActive" text="Status" prefWidth="80" />
                    <TableColumn text="Actions" prefWidth="120" />
                </columns>
            </TableView>
        </VBox>

        <!-- Action Buttons -->
        <HBox spacing="12" alignment="CENTER_LEFT">
            <Button text="Add User" onAction="#handleAddUser" style="-fx-background-color: #10b981; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20; -fx-background-radius: 6; -fx-cursor: hand;"/>
            <Button text="Edit User" style="-fx-background-color: #2563eb; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20; -fx-background-radius: 6; -fx-cursor: hand;"/>
            <Button text="Reset Password" onAction="#handleResetPassword" style="-fx-background-color: #f59e0b; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20; -fx-background-radius: 6; -fx-cursor: hand;"/>
            <Button text="Audit Logs" onAction="#handleViewAuditLogs" style="-fx-background-color: #0ea5e9; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20; -fx-background-radius: 6; -fx-cursor: hand;"/>
            <Button text="Delete User" onAction="#handleDeleteUser" style="-fx-background-color: #ef4444; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 20; -fx-background-radius: 6; -fx-cursor: hand;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Back" onAction="#handleBack" style="-fx-background-color: transparent; -fx-text-fill: #475569; -fx-border-color: #d1d5db; -fx-border-width: 1; -fx-border-radius: 6; -fx-padding: 10 20; -fx-font-size: 12px; -fx-cursor: hand;"/>
        </HBox>
    </VBox>
</VBox>