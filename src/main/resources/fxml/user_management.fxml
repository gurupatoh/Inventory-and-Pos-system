<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.app.inventory.controllers.UserManagementController">
    <children>
        <HBox style="-fx-background-color: #f0f0f0; -fx-padding: 10;">
            <children>
                <Label text="User Management" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
            </children>
        </HBox>

        <VBox spacing="10" VBox.vgrow="ALWAYS">
            <children>
                <!-- Filter -->
                <HBox spacing="10" style="-fx-padding: 10;">
                    <Label text="Filter by Username:" />
                    <TextField fx:id="filterUsername" prefWidth="200" />
                </HBox>

                <!-- User Table -->
                <TableView fx:id="userTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colUsername" text="Username" prefWidth="150" />
                        <TableColumn fx:id="colRole" text="Role" prefWidth="100" />
                        <TableColumn fx:id="colInventoryType" text="Inventory Type" prefWidth="150" />
                        <TableColumn fx:id="colLastLogin" text="Last Login" prefWidth="150" />
                        <TableColumn fx:id="colActive" text="Active" prefWidth="100" />
                    </columns>
                </TableView>

                <!-- Action Buttons -->
                <HBox spacing="10" style="-fx-padding: 10;">
                    <Button text="Add User" onAction="#handleAddUser" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
                    <Button text="Delete User" onAction="#handleDeleteUser" style="-fx-background-color: #f44336; -fx-text-fill: white;" />
                    <Button text="Reset Password" onAction="#handleResetPassword" style="-fx-background-color: #ff9800; -fx-text-fill: white;" />
                    <Button text="View Audit Logs" onAction="#handleViewAuditLogs" style="-fx-background-color: #2196F3; -fx-text-fill: white;" />
                    <Button text="Back" onAction="#handleBack" style="-fx-background-color: #9E9E9E; -fx-text-fill: white;" />
                </HBox>
            </children>
        </VBox>
    </children>
</VBox>
