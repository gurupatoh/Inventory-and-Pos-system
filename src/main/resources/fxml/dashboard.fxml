<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.Priority?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.text.Text?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.app.inventory.controllers.DashboardController"
            prefWidth="1400" prefHeight="900">

    <!-- Top Navigation Bar -->
    <top>
        <HBox spacing="24" alignment="CENTER_LEFT" style="-fx-background-color: #ffffff; -fx-padding: 16 24; -fx-border-width: 0 0 1 0; -fx-border-color: #e2e8f0;">

            <Text text="TaruzPOS" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-fill: #2563eb;"/>

            <Separator orientation="VERTICAL" style="-fx-padding: 0; -fx-border-color: #e2e8f0;"/>

            <Label fx:id="welcomeLabel" style="-fx-text-fill: #475569; -fx-font-size: 13px;"/>

            <Region HBox.hgrow="ALWAYS"/>

            <Label fx:id="dateTimeLabel" style="-fx-text-fill: #64748b; -fx-font-size: 12px;"/>

            <Button text="Settings" style="-fx-background-color: transparent; -fx-text-fill: #475569; -fx-font-size: 12px; -fx-padding: 6 12; -fx-cursor: hand;"/>

            <Button text="Logout" onAction="#handleLogout" style="-fx-background-color: #ef4444; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 16; -fx-background-radius: 6; -fx-cursor: hand;"/>
        </HBox>
    </top>

    <!-- Left Sidebar Navigation -->
    <left>
        <VBox spacing="0" style="-fx-background-color: #1e293b; -fx-min-width: 240;" prefWidth="240">

            <!-- Sidebar Header -->
            <HBox alignment="CENTER" style="-fx-padding: 20 16; -fx-border-width: 0 0 1 0; -fx-border-color: #334155;">
                <Label text="Menu" style="-fx-text-fill: #cbd5e1; -fx-font-size: 12px; -fx-font-weight: bold;"/>
            </HBox>

            <!-- Admin Section -->
            <VBox fx:id="adminMenu" spacing="0" style="-fx-padding: 16 8;">
                <Label text="ADMINISTRATION" style="-fx-text-fill: #94a3b8; -fx-font-size: 11px; -fx-font-weight: bold; -fx-padding: 0 8 12 8;"/>

                <Button text="User Management" onAction="#handleUserManagement"
                        style="-fx-background-color: transparent; -fx-text-fill: #cbd5e1; -fx-font-size: 13px; -fx-padding: 12 16; -fx-alignment: CENTER_LEFT; -fx-cursor: hand;"/>

                <Button text="System Settings" onAction="#openReports"
                        style="-fx-background-color: transparent; -fx-text-fill: #cbd5e1; -fx-font-size: 13px; -fx-padding: 12 16; -fx-alignment: CENTER_LEFT; -fx-cursor: hand;"/>
            </VBox>

            <Separator style="-fx-padding: 0; -fx-border-color: #334155;"/>

            <!-- Staff Section -->
            <VBox fx:id="staffMenu" spacing="0" style="-fx-padding: 16 8;">
                <Label text="OPERATIONS" style="-fx-text-fill: #94a3b8; -fx-font-size: 11px; -fx-font-weight: bold; -fx-padding: 0 8 12 8;"/>

                <Button fx:id="inventoryButton" text="Inventory" onAction="#openInventory"
                        style="-fx-background-color: transparent; -fx-text-fill: #cbd5e1; -fx-font-size: 13px; -fx-padding: 12 16; -fx-alignment: CENTER_LEFT; -fx-cursor: hand;"/>

                <Button text="Orders" onAction="#openOrders"
                        style="-fx-background-color: transparent; -fx-text-fill: #cbd5e1; -fx-font-size: 13px; -fx-padding: 12 16; -fx-alignment: CENTER_LEFT; -fx-cursor: hand;"/>

                <Button text="Reports" onAction="#openReports"
                        style="-fx-background-color: transparent; -fx-text-fill: #cbd5e1; -fx-font-size: 13px; -fx-padding: 12 16; -fx-alignment: CENTER_LEFT; -fx-cursor: hand;"/>
            </VBox>

            <Region VBox.vgrow="ALWAYS"/>

            <!-- Footer -->
            <HBox alignment="CENTER" style="-fx-padding: 16; -fx-border-width: 1 0 0 0; -fx-border-color: #334155;">
                <Label text="v1.0.0" style="-fx-text-fill: #64748b; -fx-font-size: 11px;"/>
            </HBox>
        </VBox>
    </left>

    <!-- Main Content Area -->
    <center>
        <VBox fx:id="mainContent" spacing="24" style="-fx-background-color: #f8fafc;">
            <padding>
                <Insets top="24" bottom="24" left="24" right="24"/>
            </padding>

            <!-- Page Title Section -->
            <VBox spacing="8">
                <Label text="Dashboard" style="-fx-text-fill: #1e293b; -fx-font-size: 32px; -fx-font-weight: bold;"/>
                <Label text="Welcome to TaruzPOS - Inventory and Point of Sale System" style="-fx-text-fill: #64748b; -fx-font-size: 13px;"/>
            </VBox>

            <!-- Quick Stats Row -->
            <HBox spacing="16">
                <!-- Total Sales Card -->
                <VBox style="-fx-background-color: #ffffff; -fx-border-color: #e2e8f0; -fx-border-width: 1; -fx-border-radius: 8; -fx-background-radius: 8;" HBox.hgrow="ALWAYS">
                    <padding>
                        <Insets top="20" bottom="20" left="20" right="20"/>
                    </padding>
                    <Label text="Total Sales" style="-fx-text-fill: #64748b; -fx-font-size: 12px; -fx-font-weight: bold;"/>
                    <Label text="KES 1,250,000" style="-fx-text-fill: #2563eb; -fx-font-size: 24px; -fx-font-weight: bold;"/>
                </VBox>

                <!-- Active Items Card -->
                <VBox style="-fx-background-color: #ffffff; -fx-border-color: #e2e8f0; -fx-border-width: 1; -fx-border-radius: 8; -fx-background-radius: 8;" HBox.hgrow="ALWAYS">
                    <padding>
                        <Insets top="20" bottom="20" left="20" right="20"/>
                    </padding>
                    <Label text="Active Items" style="-fx-text-fill: #64748b; -fx-font-size: 12px; -fx-font-weight: bold;"/>
                    <Label text="342" style="-fx-text-fill: #10b981; -fx-font-size: 24px; -fx-font-weight: bold;"/>
                </VBox>

                <!-- Low Stock Card -->
                <VBox style="-fx-background-color: #ffffff; -fx-border-color: #e2e8f0; -fx-border-width: 1; -fx-border-radius: 8; -fx-background-radius: 8;" HBox.hgrow="ALWAYS">
                    <padding>
                        <Insets top="20" bottom="20" left="20" right="20"/>
                    </padding>
                    <Label text="Low Stock Items" style="-fx-text-fill: #64748b; -fx-font-size: 12px; -fx-font-weight: bold;"/>
                    <Label text="12" style="-fx-text-fill: #f59e0b; -fx-font-size: 24px; -fx-font-weight: bold;"/>
                </VBox>

                <!-- Active Users Card -->
                <VBox style="-fx-background-color: #ffffff; -fx-border-color: #e2e8f0; -fx-border-width: 1; -fx-border-radius: 8; -fx-background-radius: 8;" HBox.hgrow="ALWAYS">
                    <padding>
                        <Insets top="20" bottom="20" left="20" right="20"/>
                    </padding>
                    <Label text="Active Users" style="-fx-text-fill: #64748b; -fx-font-size: 12px; -fx-font-weight: bold;"/>
                    <Label text="8" style="-fx-text-fill: #0ea5e9; -fx-font-size: 24px; -fx-font-weight: bold;"/>
                </VBox>
            </HBox>

            <!-- Quick Actions -->
            <HBox spacing="12">
                <Button text="New Sale" style="-fx-background-color: #2563eb; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 12 20; -fx-background-radius: 6; -fx-font-size: 13px; -fx-cursor: hand;"/>
                <Button text="Add Inventory" style="-fx-background-color: #10b981; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 12 20; -fx-background-radius: 6; -fx-font-size: 13px; -fx-cursor: hand;"/>
                <Button text="View Reports" style="-fx-background-color: #6b7280; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 12 20; -fx-background-radius: 6; -fx-font-size: 13px; -fx-cursor: hand;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="Refresh" style="-fx-background-color: transparent; -fx-text-fill: #2563eb; -fx-border-color: #2563eb; -fx-border-width: 1; -fx-border-radius: 6; -fx-padding: 12 20; -fx-font-size: 13px; -fx-cursor: hand;"/>
            </HBox>

            <Region VBox.vgrow="ALWAYS"/>
        </VBox>
    </center>

</BorderPane>