<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.2"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.app.inventory.auth.LoginController"
      spacing="15" alignment="CENTER"
      prefWidth="400" prefHeight="300"
      styleClass="bg-light"
      style="-fx-padding: 20;">

    <!-- Title -->
    <Label text="Login Screen"
           styleClass="label-title"/>

    <!-- Username Field -->
    <TextField fx:id="usernameField"
               promptText="Username"
               styleClass="text-field"/>

    <!-- Password Field -->
    <PasswordField fx:id="passwordField"
                   promptText="Password"
                   styleClass="password-field"/>

    <!-- Login Button -->
    <Button text="Login"
            onAction="#handleLogin"
            styleClass="btn-primary"
            style="-fx-padding: 10 20; -fx-font-size: 16px;"/>
</VBox>